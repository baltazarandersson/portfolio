---
import BgBall from '@components/BgBall.svelte'
import Header from '@components/Header/index.astro'
import StarryBackground from '@components/StarryBackground.svelte'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Baltazar Andersson's portfolio, made with AstroJS in addition with Svelte and TailwindCSS."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="scroll-smooth bg-zinc-100 font-helvetica text-zinc-700 dark:bg-zinc-900 dark:text-indigo-50"
	>
		<StarryBackground client:only />
		<Header />
		<slot />
		<BgBall client:only />
	</body>
	<script>
		import { getCurrentTheme, updateStoredTheme } from '@utils/theme'
		import type { ThemeType } from 'types/index'

		const theme = (() => getCurrentTheme())() as ThemeType

		if (theme === 'light') {
			document.documentElement.classList.remove('dark')
		}

		updateStoredTheme(theme)
	</script>
</html>
<style is:global>
	@font-face {
		font-family: 'Heming Variable';
		src: url('/fonts/heming_variable.ttf') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Helvetica Light';
		src: url('/fonts/helvetica_light.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	:root {
		--primary-color: rgb(245, 158, 11);
	}

	:root.dark {
		--primary-color: rgb(217, 119, 6);
	}

	:root[class='dark'] {
		color-scheme: dark;
	}

	html {
		scroll-behavior: smooth;
	}

	* {
		-webkit-tap-highlight-color: transparent; /* remove tap highlight */
	}

	.p-layout {
		@apply px-8 sm:px-12 md:px-20 lg:px-40 xl:px-40;
	}
</style>
