---
import Header from "@components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="text-black font-helvetica bg-zinc-100 dark:text-indigo-50 dark:bg-zinc-900 scroll-smooth"
  >
    <Header />
    <slot />
  </body>
  <script>
    import { getCurrentTheme, updateStoredTheme } from "@utils/theme";

    const theme = (() => {
      if (typeof localStorage !== "undefined" && getCurrentTheme())
        return getCurrentTheme();

      // Default to dark if no preference is found in local storage
      return "dark";
    })();

    if (theme === "light") {
      document.documentElement.classList.remove("dark");
    }

    updateStoredTheme(theme);
  </script>
</html>
<style is:global>
  @font-face {
    font-family: "Heming Variable";
    src: url("fonts/heming_variable.ttf") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Light";
    src: url("fonts/helvetica_light.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root[class="dark"] {
    color-scheme: dark;
  }

  html {
    scroll-behavior: smooth;
  }

  .p-layout {
    @apply px-8 sm:px-12 md:px-20 lg:px-40 xl:px-40;
  }
</style>
