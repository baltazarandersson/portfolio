---
import Heading from "@components/Heading.astro";
import Text from "@components/Text.astro";
import Underline from "@components/Underline.astro";
import Section from "@components/Section.astro";
import type { SectionType } from "types/index";
import Socials from "@components/Socials/index.astro";

interface Props {
  id?: SectionType;
}

const { id = "" } = Astro.props;
---

<Section
  class="flex flex-col items-center justify-center gap-10 p-layout md:justify-between md:flex-row md:gap-20"
  id={id}
>
  <div class="flex flex-col gap-8 lg:w-3/5">
    <Heading>
      Hi! <br class="hidden sm:block" />
      My name is <span class="relative">Baltazar<Underline /></span>
    </Heading>
    <Text
      size="p3"
      class="text-center text-zinc-500 dark:text-zinc-400 sm:text-start"
    >
      Frontend developer who aims to specialize in crafting user interfaces with
      React, focusing on performance and clean code to ensure a smooth and
      engaging user experience.
    </Text>
  </div>
  <div class="flex items-center justify-center">
    <!-- <img
      alt="personal-avatar"
      src="/images/avatar.jpg"
      class="w-full max-w-[200px] sm:min-w-[300px] rounded-full border-2 border-zinc-200 dark:border-zinc-800"
    /> -->
  </div>
</Section>
