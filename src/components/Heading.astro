---
interface Props {
  size?: "h5" | "h4" | "h3" | "h2" | "h1";
  class?: string;
}

const sizeVariants = {
  h5: "text-2xl md:text-3xl",
  h4: "text-3xl md:text-4xl",
  h3: "text-4xl md:text-5xl",
  h2: "text-5xl md:text-5xl",
  h1: "text-5xl md:text-6xl",
};

const { size: As = "h1", class: className = "" } = Astro.props;
---

<As class:list={["font-heming", sizeVariants[As], className]}>
  <slot />
</As>
